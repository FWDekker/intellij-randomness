<!--                class="com.fwdekker.randomness.template.TemplateInsertAction$RepeatAction"-->
<!--                text="Random Repeated Template"-->
<!--                description="Inserts the same random template at each caret."-->
<!--                icon="/icons/data-repeat.svg" />-->
