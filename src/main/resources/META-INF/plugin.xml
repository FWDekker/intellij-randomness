<idea-plugin>
    <id>com.fwdekker.randomness</id>
    <name>Randomness</name>
    <version>0.0.0</version>  <!-- Patched in from `gradle.properties` -->
    <vendor email="florine@fwdekker.com" url="https://fwdekker.com/">FWDekker</vendor>

    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="0.0" />  <!-- Patched in from `gradle.properties` -->

    <extensions defaultExtensionNs="com.intellij">
        <errorHandler implementation="com.fwdekker.randomness.ErrorReporter" />

        <!-- Persistence -->
        <applicationService serviceImplementation="com.fwdekker.randomness.template.TemplateSettings" />

        <!-- Settings window -->
        <applicationConfigurable instance="com.fwdekker.randomness.template.TemplateSettingsConfigurable"
                                 id="com.fwdekker.randomness.template.TemplateSettingsConfigurable"
                                 groupId="tools"
                                 bundle="randomness" />

        <!-- Dynamically loads, unloads, and updates template actions -->
        <dynamicActionConfigurationCustomizer implementation="com.fwdekker.randomness.template.TemplateActionLoader"/>
    </extensions>

    <!-- Non-dynamic actions -->
    <actions>
        <action id="com.fwdekker.randomness.PopupAction" class="com.fwdekker.randomness.PopupAction"
                text="Randomness" description="Opens the Randomness popup."
                icon="/icons/randomness.svg">
            <keyboard-shortcut first-keystroke="alt R" keymap="$default" />
            <add-to-group group-id="GenerateGroup" anchor="last" />
            <add-to-group group-id="ToolsMenu" anchor="last" />
            <synonym text="Random Data Generator" />
        </action>
    </actions>
</idea-plugin>
