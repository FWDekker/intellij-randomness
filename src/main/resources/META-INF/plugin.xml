<idea-plugin>
    <id>com.fwdekker.randomness</id>
    <name>Randomness</name>
    <version>0.0.0</version>  <!-- Patched in from `gradle.properties` -->
    <vendor email="f@fwdekker.com" url="https://fwdekker.com/">FWDekker</vendor>

    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="0.0" />  <!-- Patched in from `gradle.properties` -->

    <extensions defaultExtensionNs="com.intellij">
        <errorHandler implementation="com.fwdekker.randomness.ErrorReporter"/>

        <!-- Persistence -->
        <applicationService serviceImplementation="com.fwdekker.randomness.uds.UDSSettings" />
        <applicationService serviceImplementation="com.fwdekker.randomness.array.ArraySettings" />

        <!-- Settings window -->
        <applicationConfigurable instance="com.fwdekker.randomness.RandomnessConfigurable"
                                 id="randomness.MainConfigurable"
                                 groupId="tools"
                                 bundle="randomness">
            <configurable instance="com.fwdekker.randomness.uds.UDSSettingsConfigurable"
                          id="randomness.UDSSettingsConfigurable"
                          parentId="randomness.MainConfigurable" />
            <configurable instance="com.fwdekker.randomness.array.ArraySettingsConfigurable"
                          id="randomness.ArraySettingsConfigurable"
                          parentId="randomness.MainConfigurable" />
        </applicationConfigurable>
    </extensions>

    <actions>
        <!-- Popup -->
        <action id="randomness.ShowGroup" class="com.fwdekker.randomness.PopupAction"
                text="Randomness" description="Opens the Randomness popup."
                icon="/icons/data.svg">
            <keyboard-shortcut first-keystroke="alt R" keymap="$default" />
            <add-to-group group-id="GenerateGroup" anchor="last" />
            <add-to-group group-id="ToolsMenu" anchor="last" />
        </action>

        <!-- UDS -->
        <action id="randomness.InsertUDS"
                class="com.fwdekker.randomness.uds.UDSInsertAction"
                text="Random UDS"
                description="Inserts a random UDS at each caret."
                icon="/icons/data.svg" />
        <action id="randomness.InsertUDSArray"
                class="com.fwdekker.randomness.uds.UDSInsertAction$ArrayAction"
                text="Random UDS Array"
                description="Inserts an array of random UDSs at each caret."
                icon="/icons/data-array.svg" />
        <action id="randomness.InsertUDSRepeat"
                class="com.fwdekker.randomness.uds.UDSInsertAction$RepeatAction"
                text="Random Repeated UDS"
                description="Inserts the same random UDS at each caret."
                icon="/icons/data-repeat.svg" />
        <action id="randomness.InsertUDSRepeatArray"
                class="com.fwdekker.randomness.uds.UDSInsertAction$RepeatArrayAction"
                text="Random Repeated UDS Array"
                description="Inserts the same array of random UDSs at each caret."
                icon="/icons/data-repeat-array.svg" />
        <action id="randomness.UDSSettings"
                class="com.fwdekker.randomness.uds.UDSSettingsAction"
                text="UDS Settings"
                description="Settings for the Random UDS action."
                icon="/icons/data-settings.svg" />

        <!-- Arrays -->
        <action id="randomness.ArraySettings"
                class="com.fwdekker.randomness.array.ArraySettingsAction"
                text="Array Settings"
                description="Settings for inserting arrays of data."
                icon="/icons/data-settings.svg" />
    </actions>
</idea-plugin>
