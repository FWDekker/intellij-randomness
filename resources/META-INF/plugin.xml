<idea-plugin>
    <id>com.fwdekker.randomness</id>
    <name>Randomness</name>
    <version>0.1.0</version>
    <vendor email="felix@fwdekker.com" url="https://fwdekker.com/">FWDekker</vendor>

    <description><![CDATA[
        Insert random strings and numbers with the press of a single key.<br><br>

        Adds actions to insert random data into your editor, which can be useful when writing tests.
    ]]></description>

    <change-notes><![CDATA[
        Initial release.
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>

    <actions>
        <action id="randomness.InsertNumber" class="com.fwdekker.randomness.insertion.InsertRandomNumber"
                text="Insert Random Number" description="Inserts a random number at the caret."/>
        <action id="randomness.NumberSettings" class="com.fwdekker.randomness.settings.NumberSettingsAction"
                text="Insert Random Number Settings" description="Settings for Insert Random Number."/>

        <action id="randomness.InsertString" class="com.fwdekker.randomness.insertion.InsertRandomString"
                text="Insert Random String" description="Inserts a random string at the caret."/>
        <action id="randomness.StringSettings" class="com.fwdekker.randomness.settings.StringSettingsAction"
                text="Insert Random String Settings" description="Settings for Insert Random String."/>
    </actions>
</idea-plugin>
